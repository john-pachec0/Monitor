# Terraform Variables - Example Configuration
# Copy this file to terraform.tfvars and fill in your values

# Project Configuration
project_name = "Monitor"
environment  = "prod"
aws_region   = "us-east-1" # Must be us-east-1 for ACM certificates with API Gateway

# Domain Configuration
domain_name   = "Monitor.app"
api_subdomain = "api"
use_route53   = false # Set to true if domain DNS is in Route 53, false for Namecheap

# Email Configuration (REQUIRED)
notification_email = "your-email@example.com"  # Email to receive feedback notifications
from_email         = "noreply@Monitor.app"     # Email address for sending (must be verified in SES)

# API Gateway Configuration
enable_api_key = true  # Require API key for requests (recommended)
rate_limit     = 10    # Requests per second
burst_limit    = 20    # Burst requests

# Lambda Configuration
lambda_memory_size = 256 # MB
lambda_timeout     = 10  # Seconds

# DynamoDB Configuration
dynamodb_billing_mode = "PAY_PER_REQUEST" # or "PROVISIONED"

# Logging Configuration
cloudwatch_retention_days = 30 # Days to retain logs

# Monitoring
enable_xray_tracing      = false # Enable AWS X-Ray tracing (adds cost)
enable_ses_notifications = false # Enable SNS notifications for email bounces

# Tags
tags = {
  Project     = "Monitor"
  ManagedBy   = "Terraform"
  Purpose     = "Feedback API"
  Environment = "prod"
  Owner       = "your-name"
}
