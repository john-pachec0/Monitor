[
  // Build & Run Shortcuts
  {
    "key": "cmd+r",
    "command": "workbench.action.tasks.runTask",
    "args": "Build Untwist",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+shift+k",
    "command": "workbench.action.tasks.runTask",
    "args": "Clean Build Folder"
  },
  {
    "key": "cmd+u",
    "command": "workbench.action.tasks.runTask",
    "args": "Test Untwist"
  },

  // SweetPad Shortcuts
  {
    "key": "cmd+shift+r",
    "command": "sweetpad.build.run",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+b",
    "command": "sweetpad.build.buildOnly",
    "when": "editorTextFocus"
  },

  // Quick Navigation
  {
    "key": "cmd+shift+o",
    "command": "workbench.action.gotoSymbol",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+t",
    "command": "workbench.action.quickOpen"
  },

  // Terminal
  {
    "key": "cmd+j",
    "command": "workbench.action.terminal.toggleTerminal"
  },

  // Git
  {
    "key": "cmd+shift+g",
    "command": "workbench.view.scm"
  }
]
